      "province": "省份",
      "teamId": "所属战队ID",
      "totalQuestions": "总答题数",
      "correctRate": "正确率",
      "studyDays": "学习天数",
      "createTime": "创建时间",
      "updateTime": "更新时间"
    },
    "indexes": [
      { "field": "openid", "unique": true },
      { "field": "points" },
      { "field": "province" },
      { "field": "teamId" }
    ]

page {
  background: #1a1a2e;
  color: #eaeaea;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Oxygen', 'Ubuntu', 'Cantarell', 'Fira Sans', 'Droid Sans', 'Helvetica Neue', sans-serif;
}

.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
  min-height: 100vh;
}

button {
  background: #e94560;
  color: #fff;
  border: none;
  border-radius: 8rpx;
  padding: 20rpx 40rpx;
  font-size: 28rpx;
}

button:focus {
  outline: 0;
}

button::after {
  border: none;
}

button:active {
  background: #d6354f;
}

button.secondary {
  background: #0f3460;
}

button.secondary:active {
  background: #16213e;
}

.card {
  background: #16213e;
  border-radius: 16rpx;
  padding: 30rpx;
  margin: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.3);
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #e94560;
  margin-bottom: 20rpx;
}

.subtitle {
  font-size: 28rpx;
  color: #7a7a8c;
  margin-bottom: 30rpx;
}

.text-primary {
  color: #e94560;
}

.text-secondary {
  color: #7a7a8c;
}

.text-success {
  color: #4ade80;
}

.text-warning {
  color: #fbbf24;
}

.flex-row {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.flex-column {
  display: flex;
  flex-direction: column;
}

.justify-between {
  justify-content: space-between;
}

.justify-center {
  justify-content: center;
}

.align-center {
  align-items: center;
}

.gap-10 {
  gap: 10rpx;
}

.gap-20 {
  gap: 20rpx;
}

.mt-10 {
  margin-top: 10rpx;
}

.mt-20 {
  margin-top: 20rpx;
}

.mb-10 {
  margin-bottom: 10rpx;
}

.mb-20 {
  margin-bottom: 20rpx;
}

.p-20 {
  padding: 20rpx;
}

.p-30 {
  padding: 30rpx;
}